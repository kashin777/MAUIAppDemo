<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppDemo.Pages.ValidationPropertyErrors"
             xmlns:local="clr-namespace:MauiAppDemo.Pages">

    <ContentView.BindingContext>
        <local:ValidationPropertyModel />
    </ContentView.BindingContext>

    <VerticalStackLayout>
        <Border
            Stroke="{StaticResource Error}"
            StrokeThickness="2"
            StrokeShape="RoundRectangle 6,6,6,6"
            Background="{StaticResource ErrorBackground}"
            Padding="10, 0, 10, 0"
            Margin="5, 0, 5, 0"
            HorizontalOptions="Fill"
            IsVisible="{Binding HasErrors}">
            <CollectionView ItemsSource="{Binding Errors}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding}" TextColor="{StaticResource Error}" FontSize="Caption" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Border>
    </VerticalStackLayout>
</ContentView>
